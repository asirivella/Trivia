
<table class="table table-hover leaderboard">
  <tr>
	<th>Rank</th>
    <th>Email Id</th>
    <th>Score</th>
	<th>Best performance in</th>
  </tr>
  <% @leaderboard.each do |board| %>
	<% if board.user_id == current_user.id %>
    <tr class="info">
	<% else %>
	<tr>
	<% end %>
	  <td></td>
      <td><%= board.email %></td>
      <td><%= board.score %></td>
	  <td><%= board.tag %></td>
    </tr>
  <% end %>
</table>